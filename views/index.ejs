<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/products/">

      <button class="btn btn-primary">Show All Products</button>
    </a>
    <form action="/categories/newCategory" method="post">
      <h3>Create categorie</h3>
      <input type="text" name="name" placeholder="name of categorie">
      <input type="text" name="description" placeholder="description">
      <input class="btn btn-info" type="submit" name="submit" value="Create">

    </form>
    <hr>
    <h1>Categories List</h1>
    <%= Category=="" ? "no category listed" : ""%>
    <%Category.forEach(data=>{%>
      <div class="box w-300 d-flex justify-content-between align-item-center">
        <div class="text">
          <h1>Name :<%=data.name%></h1>
          <h3>Description :<%=data.description%></h3>
        </div>
        
        <div class="buttons  ">
          <a href='/categories/<%=data._id%>'>
        
            <button class="btn btn-primary"> Visit</button>
          </a>
       <a href="/categories/update/<%=data._id%>">

         <button type="button" class="btn btn-warning">Update</button>
       </a>
        <a href="/categories/delete/<%=data._id%>">

          <button class="btn btn-danger">Delete</button>
        </a> 
        </div>
      </div>
     
    <%})%>
    <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-pprn3073KE6tl6fn7ltlHdfhU65tT04AN6zRroYdxPbbXRXEIHGIgBRvoQulfp7j" 
    crossorigin="anonymous"
  ></script>
  </body>
</html>
