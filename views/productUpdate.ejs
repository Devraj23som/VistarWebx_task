<body>
    <h1>Update your product</h1>
 <div class="card">

     <form action="/products/update/<%=product._id%>" method="post">
         <input type="text" name="name" value="<%=product.name%>" placeholder="productname">
         <input type="number" name="price" value="<%=product.price%>" min="0" placeholder="price">
         <input type="number" name="stock" value="<%=product.stock%>" min="0" placeholder="In stock">
         <input type="submit" class="btn btn-success" value="Update">
     </form>
 </div>
</body>
</html>